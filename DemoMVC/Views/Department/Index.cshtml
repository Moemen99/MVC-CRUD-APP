
@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<h1 class="mt-4">All Departments</h1>
<br />
<br />

<a class="btn btn-primary" asp-action="Create">Create New Department</a>

@if(Model.Count() > 0){
    <table class="table table-striped mt-4">
        <thead >
            <tr>
                <th>@Html.DisplayNameFor(D => D.Code)</th>
                <th>@Html.DisplayNameFor(D => D.Name)</th>
                <th>@Html.DisplayNameFor(D => D.DateOfCreation)</th>
                <th>Details</th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var dept in Model)
           {
            <tr>
                <td>@dept.Code</td>
                <td>@dept.Name</td>
                <td>@dept.DateOfCreation</td>
                <partial name="_ButtonsPartial" model="dept.Id" />
            </tr>
            
           
               
           }

        </tbody>
    </table>
}
else{
    <div class="alert alert-warning mt-4">No Departments Available :(</div>
}

